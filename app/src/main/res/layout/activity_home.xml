<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/tbHome"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/account" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCityHome"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Toronto"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDateHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Oct 20 | Sun"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivPresentWeatherHome"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="140dp"
            android:src="@drawable/icon_testweather" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTemHome"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="11°C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/windSpeed_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvPresentWeatherHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="CLOUDY"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDivideUpHome"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="───────────────────────────────────────────"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime0Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="21:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivTime0WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvTime0WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="14°C"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime1Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="00:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivTime1WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvTime1WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="12°C"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime2Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="03:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivTime2WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvTime2WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10°C"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime3Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="06:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/ivTime3WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvTime3WeatherHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10°C"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDivideDownHome"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="───────────────────────────────────────────"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay1Home"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Mon"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDay1Weather"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvDay1HighTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="14°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDay1LowTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="13°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay2Home"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Tue"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDay2Weather"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvDay2HighTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="16°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDay2LowTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="8°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay3Home"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Wed"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDay3Weather"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvDay3HighTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="14°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDay3LowTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="13°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay4Home"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Thu"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDay4Weather"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvDay4HighTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="16°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDay4LowTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="8°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay5Home"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Fri"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDay5Weather"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_testweather" />

            <TextView
                android:id="@+id/tvDay5HighTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="14°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDay5LowTemHome"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:text="13°C"
                android:textAlignment="center"
                android:layout_marginTop="6dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>